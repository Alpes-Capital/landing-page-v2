{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@p-styles/*": ["./src/p-styles/*"],
      "@layout/*": ["./src/layout/*"],
      "@public/*": ["./public/*"],
      "@p-images/*": ["./public/images/pages/*"],
      "@lotties/*": ["./public/lottie/*"],
      "@icons/*": ["./public/icons/*"],
      "@images/*": ["./public/images/*"],
      "@manifest/*": ["./public/manifest/*"],
      "@routes": ["./routes.ts"],
    },
  },
  "include": [
    "next-env.d.ts", 
    "./types/*.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    "pages/_document.js"],
  "exclude": ["node_modules"]
}
